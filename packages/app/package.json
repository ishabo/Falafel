  },
  "dependencies": {
    "@falafel/blockchain": "workspace:packages/blockchain",
    "@falafel/wallet": "workspace:packages/wallet",
    "@types/express": "^4.17.11",
    "@types/redis": "^2.8.28",
    "@types/request": "^2.48.5",
    "@types/ws": "^7.4.1",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
